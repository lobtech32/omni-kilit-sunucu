{
  "builds": [
    {
      "src": "package.json",
      "use": "@railway/node",
      "config": {
        "maxMemory": "8GB",
        "gpu": true
      }
    }
  ],
  "deployments": [
    {
      "src": "package.json",
      "use": "@railway/node",
      "variables": {
        "NODE_ENV": "production",
        "PORT": "3000",
        "TCP_PROXY_HOST": "metro.proxy.rlwy.net",
        "TCP_PROXY_PORT": "14722"
      }
    }
  ]
}